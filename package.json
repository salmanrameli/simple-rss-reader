{
  "name": "RSS",
  "description": "Simple RSS reader utilising Electron and ReactJS with partial Feedly support",
  "version": "5.2",
  "private": true,
  "main": "main.js",
  "homepage": "./",
  "author": {
    "name": "Salman Rameli",
    "email": "salmanrameli@gmail.com"
  },
  "build": {
    "appId": "com.salmanrameli.simple-rss-reader",
    "productName": "Simple RSS Reader",
    "copyright": "Copyright Â© 2021 ${author}",
    "asar": false,
    "extends": null,
    "files": [
      "assets/*",
      "build/**/*",
      "node_modules/**/*",
      "public/**/*",
      "src/**/*",
      "electron-wait-react.js",
      "main.js",
      "Procfile"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "mac": {
      "icon": "assets/icon.icns",
      "type": "distribution",
      "target": [
        "dmg"
      ],
      "category": "public.app-category.utilities"
    },
    "linux": {
      "icon": "assets/icon.icns",
      "executableName": "Simple RSS Reader",
      "target": [
        "deb",
        "AppImage"
      ],
      "synopsis": "Simple RSS reader utilising Electron and ReactJS with partial Feedly support"
    }
  },
  "dependencies": {
    "axios": "^0.21.1",
    "bluebird": "^3.7.2",
    "cross-env": "^7.0.2",
    "date-and-time": "^0.14.2",
    "electron-about-window": "^1.13.4",
    "electron-is-dev": "^1.2.0",
    "electron-store": "^5.2.0",
    "feedparser": "^2.2.10",
    "npm-check-updates": "^11.8.5",
    "react": "^15.0.0",
    "react-dom": "^15.0.0",
    "react-electron-web-view": "^2.0.1",
    "react-html-parser": "^2.0.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^3.4.3",
    "string-to-stream": "^3.0.1"
  },
  "scripts": {
    "react-start": "PORT=8080 react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "release": "yarn react-build && electron-builder --publish=always",
    "build": "yarn react-build && yarn electron-build",
    "electron": "electron .",
    "dev": "nf start -p 3000",
    "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:8080 && electron .\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "concurrently": "^5.2.0",
    "electron": "^9.3.1",
    "electron-builder": "^22.7.0",
    "foreman": "^3.0.1",
    "typescript": "^3.9.6",
    "wait-on": "^5.0.1"
  }
}
